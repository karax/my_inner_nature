<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="17dp"
            android:text="Versio: 1.0"
            />

        <TextView
             android:id="@+id/tv_app_author"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintTop_toBottomOf="@id/tv_app_version"
             app:layout_constraintStart_toStartOf="@id/tv_app_version"
             android:layout_marginTop="5dp"
             android:text="Author: Jean Karax"
            />

        <TextView
            android:id="@+id/tv_disclaimers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_app_author"
            app:layout_constraintStart_toStartOf="@id/tv_app_author"
            android:layout_marginTop="5dp"
            android:text="Disclaimers: "/>

        <TextView
            android:id="@+id/tv_app_acknowledgements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_disclaimers"
            app:layout_constraintStart_toStartOf="@id/tv_disclaimers"
            android:layout_marginTop="5dp"
            android:text="Acknowledgements: "/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>